<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quizenglishb1.SignIn">

    <TextView
        android:text="Please insert your user name, and your password twice."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/signin_username"
        android:text="username"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/login_password"
        android:layout_alignStart="@+id/login_password"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/signin_password1"
        android:password="true"
        android:text="password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/signin_password2"
        android:password="true"
        android:text="password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_password1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/signin_button"
        android:text="Sign in"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/signin_password2"
        android:layout_alignLeft="@+id/signin_password2"
        android:layout_alignStart="@+id/signin_password2" />

    <TextView
        android:id="@+id/suggest_login"
        android:text="If you have already an account, please touch the following button to access to the application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_to_login"
        android:text="Log in"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/suggest_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"/>

</RelativeLayout>
