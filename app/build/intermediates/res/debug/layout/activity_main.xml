<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:focusable="false">

    <TextView
        android:id = "@+id/welcome"
        android:text="Welcome! What do you want to do?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_below="@id/welcome">

        <Button
            android:text="Play"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:drawableRight="@drawable/ic_action_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonshape"
            android:layout_margin="15px"/>

        <Button
            android:text="See word list"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_list"
            android:layout_below="@id/playButton"
            android:background="@drawable/buttonshape"
            android:layout_margin="15px"/>

        <Button
            android:text="Game tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/tools"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_tools"
            android:layout_below="@id/list"
            android:background="@drawable/buttonshape"
            android:layout_margin="15px"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/flag_sync"
        android:text="fdsafsdafds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_logout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Log out"
        android:id="@+id/btn_logout"
        android:background="@drawable/buttonshape"
        android:layout_below="@id/buttons"
        android:layout_alignRight="@+id/buttons"
        android:layout_alignEnd="@+id/buttons"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"/>
</RelativeLayout>
